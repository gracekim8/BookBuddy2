<head>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
    </style>
</head>

<h2>Edit Book</h2>

<table cellspacing="8" align="left" cellpadding="30" border="0">
    <tr>
        <th>Title</th>
        <th>ISBN</th>
        <th>Author</th>
        <th>Location</th>
        <th>Rating</th>
        <th>ReadStatus</th>
    </tr>
    <tr>     
        <td>@EditModel.editTitle</td>
        <td>@EditModel.editISBN</td>
        <td>@EditModel.editAuthor</td>
        <td> <input type="text" placeholder=@EditModel.editLocation id="Location" class="tb" /></td> 
        <td> <input type="text" placeholder=@EditModel.editRating id="Rating" class="tb" /></td>       
        @if (EditModel.editRead)
        {
            <td>
                <input type="checkbox" checked id="readBook" name="readBook" value="Read">
                <label for="readBook">Mark as Read</label><br>
            </td>
        }
        else{
            <th>
                <input type="checkbox" id="readBook" name="readBook" value="Read">
                <label for="readBook">Mark as Read</label><br>
            </th>
        }
    </tr>
    <tr>
        <td>
            <input type="submit" value="Delete from Library" onclick="location.href='@Url.Action("EditSubmit", "Edit")'" />
        </td>
        <td>
            <input type="submit" value="Submit Changes" onclick="location.href='@Url.Action("EditSubmit", "Edit")'" />
        </td>
    </tr>
</table>
<div style="clear:both;"></div>
<br />
<br />
<h3>Lend Book</h3>
<table cellspacing="8" align="left" cellpadding="30" border="0">
    <tr>
        <th>UserID</th>
        <th>Start Date</th>
        <th>Book Description</th>
        <th>Borrower Phone</th>
    </tr>
    <tr>
        <td> <input type="text" placeholder=ID id="Rating" class="tb" /></td>
        <td> <input type="text" placeholder=Date id="Rating" class="tb" /></td>
        <td> <input type="text" placeholder=Description id="Rating" class="tb" /></td>
        <td> <input type="text" placeholder=Phone id="Rating" class="tb" /></td>

    </tr>
    <tr>
        <td>
            <input type="submit" value="Lend Book" onclick="location.href='@Url.Action("EditSubmit", "Edit")'" />
        </td>
    </tr>
</table>